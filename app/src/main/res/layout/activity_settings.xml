<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="186dp"
        tools:layout_editor_absoluteY="289dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <Button
                android:id="@+id/textStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:gravity="left"
                android:paddingBottom="@dimen/cardview_compat_inset_shadow"
                android:text="Text Style"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/acknowledgements"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:paddingBottom="@dimen/cardview_compat_inset_shadow"
                android:text="Acknowledgements"
                android:textAllCaps="false"
                android:visibility="gone" />

            <Switch
                android:id="@+id/selfSortingCollectionsToggle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Self-Sorting Collections"
                android:textStyle="bold" />

            <Switch
                android:id="@+id/globalEncryptionToggle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Global Encryption"
                android:textStyle="bold"
                android:visibility="gone" />
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>